<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/login_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        //City Selector:
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center">
            <TextView
                android:id="@+id/CityLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColorHighlight="#28E1FF"
                android:text="Choose your current City:"/>
            <Spinner
                android:id="@+id/CitySpinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/textbox_border"
                android:textAlignment="center"
                android:gravity="center"
                android:marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">
            <EditText
                android:id="@+id/AddressSearch"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/textbox_border"
                android:hint="Enter the name of the place "
                android:imeOptions="actionDone"
                android:singleLine="true"/>
            <Button
                android:id="@+id/Search"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_button"
                android:text="Search" />
        </LinearLayout>

        // Map Fragment
        <fragment
            android:id="@+id/Map"
            android:layout_marginTop="15dp"
            android:layout_gravity="bottom"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="410dp"
            android:layout_height="450dp"
            tools:context=".OurLocations">
        </fragment>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">
            <Button
                android:id="@+id/Back"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button"
                android:text="Back to Home" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>