<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminMainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/login_bg">

        <TextView
            android:id="@+id/user_hint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@drawable/signup_title_border"
            android:fadingEdge="horizontal"
            android:fontFamily="@font/aclonica"
            android:padding="15dp"
            android:text="! Welcome, ADMIN !"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textColorHighlight="#28E1FF" />
        <Button
            android:id="@+id/ViewLatestOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="@drawable/maps_button"
            android:layout_marginTop="30dp"
            android:text="CURRENT ORDERS"
            android:padding="10dp" />
        <ImageView
            android:id="@+id/ivBackground"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/pizza_app_logo" />
        <Button
            android:id="@+id/Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_logout"
            android:layout_marginTop="20dp"
            android:text="Logout"
            android:padding="10dp" />
    </LinearLayout>

</RelativeLayout>